<Window x:Class="CustomNotepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomNotepad"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="G_Main">
        <Menu HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="792" >
            <MenuItem x:Name="MI_Plugins" Header="Plugins"></MenuItem>
        </Menu>
        <RichTextBox x:Name="RTB_Text" HorizontalAlignment="Left" Margin="0,21,0,0" VerticalAlignment="Top" MinHeight="2">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
